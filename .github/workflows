name: Build Windows EXE

on:
  push:
    branches: [ main ]
  workflow_dispatch:

jobs:
  build:
    runs-on: windows-latest

    steps:
      # 1. Клонируем ваш код
      - uses: actions/checkout@v3

      # 2. Перекодируем main.py из CP1251 в UTF-8
      - name: Convert main.py to UTF-8
        shell: pwsh
        run: |
          $content = Get-Content .\main.py -Encoding Default
          Set-Content .\main.py -Value $content -Encoding utf8

      # 3. Устанавливаем Python 3.11
      - name: Setup Python
        uses: actions/setup-python@v4
        with:
          python-version: '3.11'

      # 4. Устанавливаем зависимости
      - name: Install dependencies
        run: |
          python -m pip install --upgrade pip
          pip install pyinstaller PyQt5

      # 5. Собираем .exe
      - name: Build EXE via PyInstaller
        run: |
          pyinstaller --onefile --windowed main.py

      # 6. Загружаем артефакт
      - name: Upload artifact
        uses: actions/upload-artifact@v4
        with:
          name: tsd_registry_windows
          path: dist/*.exe
