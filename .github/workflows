name: Build Windows EXE

on:
  push:
    branches: [ main ]
  workflow_dispatch:

jobs:
  build:
    runs-on: windows-latest

    steps:
      - name: Checkout repo
        uses: actions/checkout@v4

      - name: Set up Python
        uses: actions/setup-python@v5
        with:
          python-version: "3.11"

      - name: Upgrade pip
        run: python -m pip install --upgrade pip

      - name: Install project deps
        if: ${{ hashFiles('requirements.txt') != '' }}
        run: pip install -r requirements.txt

      - name: Install PyInstaller
        run: pip install pyinstaller==6.11.0

      # Если нужны дополнительные файлы в exe, задайте их в переменной DATA_SPEC
      # Формат: src_path;dest_subdir
      # Пример: "assets;assets"
      - name: Set data files (optional)
        id: setdata
        shell: bash
        run: |
          DATA_SPEC=""
          echo "data_spec=$DATA_SPEC" >> $GITHUB_OUTPUT

      - name: Build exe (one-file)
        shell: bash
        run: |
          ADD_DATA=""
          if [ -n "${{ steps.setdata.outputs.data_spec }}" ]; then
            IFS=',' read -ra ITEMS <<< "${{ steps.setdata.outputs.data_spec }}"
            for i in "${ITEMS[@]}"; do
              ADD_DATA="$ADD_DATA --add-data \"$i\""
            done
          fi
          echo "Running: pyinstaller --onefile descop.py $ADD_DATA"
          eval pyinstaller --onefile descop.py $ADD_DATA

      - name: Upload artifact
        uses: actions/upload-artifact@v4
        with:
          name: descop-exe
          path: dist/descop.exe
          if-no-files-found: error
